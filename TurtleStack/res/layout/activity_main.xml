<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnVoteup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/button_post" />

    <Button
        android:id="@+id/recentquestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnVoteup"
        android:layout_alignRight="@+id/btnVoteup"
        android:layout_marginBottom="14dp"
        android:text="@string/recent_button" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showUserDetails"
        android:text="UserDetails" />

    <Button
        android:id="@+id/btnShowQuestionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userLblDisplayName_"
        android:layout_below="@+id/button5"
        android:onClick="showQuestionDetails"
        android:text="ShowQuestionDetails(static)"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnVoteDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnShowQuestionDetails"
        android:layout_below="@+id/btnShowQuestionDetails"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="37dp"
        android:onClick="goTagList"
        android:text="@string/title_activity_tag" />

	<Button
	    android:id="@+id/search"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/btnVoteDown"
	    android:layout_below="@+id/recentquestions"
	    android:onClick="startSearchActivity"
	    android:text="Search" />

	<Button
	    android:id="@+id/button3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/btnVoteDown"
	    android:layout_centerVertical="true"
	    android:onClick="showTagNavigation"
	    android:text="@string/button_tag_cloud" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recentquestions"
        android:layout_alignLeft="@+id/btnVoteDown"
        android:layout_marginBottom="30dp"
        android:text="NewMainactivityPreview"
        android:onClick="newmainact" />

</RelativeLayout>