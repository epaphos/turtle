<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".UserViewActivity" >

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:background="@drawable/profile_picture_border"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/userLblDisplayName_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profilePicture"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/profilePicture"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/userLblCreationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userLblDisplayName_"
            android:layout_below="@+id/userLblDisplayName_"
            android:layout_marginTop="4dp"
            android:textColor="#464645"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/userAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userLblDisplayName_"
            android:layout_below="@+id/userLblCreationDate"
            android:layout_marginTop="4dp"
            android:textColor="#464645"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/userLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userLblDisplayName_"
            android:layout_below="@+id/userAge"
            android:layout_marginTop="4dp"
            android:textColor="#464645"
            android:textSize="15sp" />
        
         <TextView
            android:id="@+id/userWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userLblDisplayName_"
            android:layout_below="@+id/userLocation"
            android:layout_marginTop="4dp"
            android:textColor="#0099FF"
            android:textSize="15sp" 
            android:autoLink="web"
            android:linksClickable="true"/>
        

        <TextView
            android:id="@+id/userLblReputation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilePicture"
            android:layout_marginTop="5dp"
            android:textColor="#464645"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/UserAboutMeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userLblReputation"
            android:layout_below="@+id/userLblReputation"
            android:layout_marginTop="10dp"
            android:text="@string/UserAboutMe"
            android:textSize="25sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/UserAboutMeHeader"
            android:layout_marginTop="2dp"
            android:background="#F9F9F6" />

        <TextView
            android:id="@+id/AboutMeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/UserAboutMeHeader"
            android:layout_below="@+id/UserAboutMeHeader"
            android:layout_marginTop="8dp"
            android:textColor="#464645"
            android:textSize="15sp" />
    </RelativeLayout>

</ScrollView>