<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bubble"
        android:longClickable="true"
        android:maxHeight="@dimen/height"
        android:maxLines="@integer/maxLinesBubbles"
        android:maxWidth="@dimen/width"
        android:scrollHorizontally="true"
        android:text="Button" />

    <Button
        android:id="@+id/buttonBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonMain"
        android:layout_alignBottom="@+id/buttonMain"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bubble"
        android:longClickable="true"
        android:maxHeight="@dimen/height"
        android:maxLines="@integer/maxLinesBubbles"
        android:maxWidth="@dimen/width"
        android:scrollHorizontally="true"
        android:text="Button" />

    <Button
        android:id="@+id/buttonAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonMain"
        android:layout_alignBottom="@+id/buttonMain"
        android:layout_alignParentRight="true"
        android:background="@drawable/bubble"
        android:gravity="center_vertical|center_horizontal"
        android:longClickable="true"
        android:maxHeight="@dimen/height"
        android:maxLines="@integer/maxLinesBubbles"
        android:maxWidth="@dimen/width"
        android:scrollHorizontally="true"
        android:text="Button" />

    <Button
        android:id="@+id/buttonRelationed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonMain"
        android:layout_toRightOf="@+id/buttonMain"
        android:background="@drawable/bubble"
        android:longClickable="true"
        android:maxHeight="@dimen/height"
        android:maxLines="@integer/maxLinesBubbles"
        android:maxWidth="@dimen/width"
        android:scrollHorizontally="true"
        android:text="Button" />

    <Button
        android:id="@+id/buttonRelationed3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMain"
        android:layout_toLeftOf="@+id/buttonMain"
        android:background="@drawable/bubble"
        android:longClickable="true"
        android:maxHeight="@dimen/height"
        android:maxLines="@integer/maxLinesBubbles"
        android:maxWidth="@dimen/width"
        android:scrollHorizontally="true"
        android:text="Button" />

    <Button
        android:id="@+id/buttonRelationed4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMain"
        android:layout_toRightOf="@+id/buttonMain"
        android:background="@drawable/bubble"
        android:longClickable="true"
        android:maxHeight="@dimen/height"
        android:maxLines="@integer/maxLinesBubbles"
        android:maxWidth="@dimen/width"
        android:scrollHorizontally="true"
        android:text="Button" />

    <Button
        android:id="@+id/buttonRelationed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonMain"
        android:layout_toLeftOf="@+id/buttonMain"
        android:background="@drawable/bubble"
        android:longClickable="true"
        android:maxHeight="@dimen/height"
        android:maxLines="@integer/maxLinesBubbles"
        android:maxWidth="@dimen/width"
        android:scrollHorizontally="true"
        android:text="Button" />

    <Button
        android:id="@+id/buttonHistorical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/gradient_bg_hover"
        android:text="Search by Recorded Tags" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Recorded Tags:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tv2"
        android:background="@drawable/gradient_bg_hover"
        android:minHeight="20dip"
        android:minWidth="120dip"
        android:text="TextView" />

    <Button
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv1"
		android:background="@drawable/gradient_bg_hover"
		android:minHeight="20dip"
        android:minWidth="120dip"
        android:text="TextView" />

    <Button
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/gradient_bg_hover"
        android:minHeight="20dip"
        android:minWidth="120dip"
        android:layout_below="@+id/textView1"
        android:text="TextView" />

    <Button
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient_bg_hover"
        android:minHeight="20dip"
        android:minWidth="120dip"
        android:text="TextView" />

    <Button
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv5"
        android:layout_alignParentRight="true"
        android:background="@drawable/gradient_bg_hover"
        android:minHeight="20dip"
        android:minWidth="120dip"
        android:text="TextView" />

</RelativeLayout>